---
layout: layout/page.njk
title: Blog
pagination:
  data: collections.blog
  size: 15
  alias: posts
  reverse: true
feeds: [{url: "/blog/rss.xml", name: "RSS"}, {url: "/blog/feed.xml", name: "Atom"}, {url: "/blog/feed.json", name: "JSON"}]
---

<ul>
    {% for post in posts %}
        <li>
            {% if post.data.link %}
                ðŸ”— <a href="{{ post.data.link }}">{{ post.data.title }} â†—</a>
            {% else %}
                {{ post.data.title }}
            {% endif %}
            <br />
            <a href="{{ post.url }}">{{ post.date | postDate }}</a>
            <article>{{ post.content | safe }}</article>
            <br />
        </li>
    {% endfor %}
    <p>
        {% if pagination.href.previous %}
            <a href=" {{ pagination.href.previous }}">Previous</a>
        {% else %}
            Previous
        {% endif %}
        /
        {% if pagination.href.next %}
            <a href=" {{ pagination.href.next }}">Next</a>
        {% else %}
            Next
        {% endif %}
    </p>
</ul>
<small>
    <ul class="inline-list">
        {% for feed in feeds %}
            <li>
                <a href="{{ feed.url }}">{{ feed.name }}</a>
            </li>
        {% endfor %}
    </ul>
</small>
