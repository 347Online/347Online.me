---
layout: layout/page.njk
title: Katie's Place
pagination:
  data: collections.releasedPosts
  size: 15
  alias: posts
  reverse: true
feeds: [{url: "/blog/rss.xml", name: "RSS"}, {url: "/blog/feed.xml", name: "Atom"}, {url: "/blog/feed.json", name: "JSON"}]
---

<ul class="posts-list">
    {% for post in posts %}
        <li>
            <h2>
                {% if post.data.link %}
                    <a href="{{ post.data.link }}" class="link-target">{{ post.data.title }}</a>
                {% else %}
                    {{ post.data.title }}
                {% endif %}
            </h2>
            <p>
                <strong><a href="{{ post.url }}">{{ post.date | postDate }}</a></strong>
            </p>
            <article>{{ post.content | safe }}</article>
            <br />
        </li>
    {% endfor %}
    <p>
        {% if pagination.href.previous %}
            <a href=" {{ pagination.href.previous }}">Previous</a>
        {% else %}
            Previous
        {% endif %}
        /
        {% if pagination.href.next %}
            <a href=" {{ pagination.href.next }}">Next</a>
        {% else %}
            Next
        {% endif %}
    </p>
</ul>
<small>
    <ul class="inline-list">
        {% for feed in feeds %}
            <li>
                <a href="{{ feed.url }}">{{ feed.name }}</a>
            </li>
        {% endfor %}
    </ul>
</small>
