---
layout: layout/base.njk
title: Blog
pagination:
  data: collections.blog
  size: 2
  alias: posts
  reverse: true
---

<ul>
    {% for post in posts %}
        <li>
            {% if post.data.link %}
                ðŸ”— <a href="{{ post.data.link }}">{{ post.data.title }} â†—</a>
            {% else %}
                {{ post.data.title }}
            {% endif %}
            <br />
            <a href="{{ post.url }}">{{ post.date | postDate }}</a>
            {{ post.content | safe }}
            <br />
        </li>
    {% endfor %}
    <p>
        {% if pagination.href.previous %}
            <a href=" {{ pagination.href.previous }}">Previous</a>
        {% else %}
            Previous
        {% endif %}
        /
        {% if pagination.href.next %}
            <a href=" {{ pagination.href.next }}">Next</a>
        {% else %}
            Next
        {% endif %}
    </p>
</ul>
